{{/* Global variables */}}
{{- $sel := false -}}
{{- $headless := false -}}

{{- $osID := .chezmoi.os -}}
{{- if (and (eq .chezmoi.os "linux") (hasKey .chezmoi.osRelease "id")) -}}
{{-   $osID = printf "%s-%s" .chezmoi.os .chezmoi.osRelease.id -}}
{{- end -}}

{{- $hostname := .chezmoi.hostname -}}

{{/* Set up headless computers */}}
{{- if eq .chezmoi.os "linux" -}}
{{-   if (.chezmoi.kernel.osrelease | lower | contains "microsoft") -}}
{{-     $headless = true -}}
{{-   end -}}
{{- end -}}
{{- if eq $hostname "kids-desktop" -}}
{{-   $headless = true -}}
{{- end -}}

{{- if hasSuffix ".ad.selinc.com" .chezmoi.fqdnHostname -}}
{{-   $sel = true -}}
{{- end -}}

{{- $email := printf "%s@%s" "j.and.w.graham" "gmail.com" -}}
{{- if $sel -}}
{{-   $email = printf "%s@%s" "jason_graham" "selinc.com" -}}
{{- end -}}

[data]
    email = {{ $email | quote }}
    hostname = {{ $hostname | quote }}
    osid = {{ $osID | quote }}

    headless = {{ $headless }}
    sel = {{ $sel }}

[edit]
    command = "nvim"

{{- if ne (.chezmoi.osRelease.id | lower) "ubuntu" }}
[diff]
    command = "difft"
    args = ["--skip-unchanged", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]
    exclude = ["scripts"]
{{- end }}

[merge]
    command = "nvim"
    args = ["-d", "{{ "{{" }} .Destination {{ "}}" }}", "{{ "{{" }} .Source {{ "}}" }}", "{{ "{{" }} .Target {{ "}}" }}"]
